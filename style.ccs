body {
    font-family: sans-serif;
    margin: 0;
    padding: 0;
    background-color: #000;
    color: #fff;
}

header {
    background-color: #111;
    padding: 20px;
    text-align: center;
}

section {
    padding: 20px;
}

footer {
    background-color: #111;
    padding: 10px;
    text-align: center;
}

a {
    color: #87CEEB;
    text-decoration: none;
}

a:hover {
    text-decoration: underline;
}
